<h1>Edit Post</h1>
<div class="text-center">
  <%= image_tag @post.image.url(:medium) %>
</div>

<div class="form-wrapper">
  <%= simple_form_for @post, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div class="form-group">
      <%= f.input :image, as: :file %>
    </div>
    <div class="form-group text-center">
      <%= f.input :caption %>
    </div>
    <div class="form-group text-center">
      <%= f.button :submit, class: 'btn-success' %>
    </div>
  <% end %>
</div>

<div class="text-center edit-links">
  <button><%= link_to "Cancel", post_path(@post) %></button>
  <button><%= link_to "Delete Post", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?" } %></button>
</div>
